+ */
+
+/dts-v1/;
+
+#include "imx8dxl.dtsi"
+#include "imx8dxl-sr-som.dtsi"
+#include "imx8dxl-sr-v2x-gateway.dtsi"
+#include "imx8dxl-sr-v2x-gateway-v11.dtsi"
+
+/ {
+	model = "SolidRun i.MX8DXL V2X Gateway";
+	compatible = "solidrun,v2x-gateway", "fsl,imx8dxl";
+};
